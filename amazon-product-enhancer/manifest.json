{
  "manifest_version": 3,
  "name": "Amazon Product Enhancer",
  "version": "1.0.0",
  "description": "增强Amazon搜索结果页面，显示产品的BSR排名、ASIN、品牌和销售数据",
  "author": "Kiro AI Assistant",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.amazon.cn/*",
    "https://www.amazon.co.uk/*",
    "https://www.amazon.de/*",
    "https://www.amazon.fr/*",
    "https://www.amazon.it/*",
    "https://www.amazon.es/*",
    "https://www.amazon.ca/*",
    "https://www.amazon.com.au/*",
    "https://www.amazon.co.jp/*",
    "https://www.amazon.in/*",
    "https://www.amazon.com.mx/*",
    "https://www.amazon.com.br/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/s*",
        "https://www.amazon.cn/s*",
        "https://www.amazon.co.uk/s*",
        "https://www.amazon.de/s*",
        "https://www.amazon.fr/s*",
        "https://www.amazon.it/s*",
        "https://www.amazon.es/s*",
        "https://www.amazon.ca/s*",
        "https://www.amazon.com.au/s*",
        "https://www.amazon.co.jp/s*",
        "https://www.amazon.in/s*",
        "https://www.amazon.com.mx/s*",
        "https://www.amazon.com.br/s*"
      ],
      "js": ["ui-renderer.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Amazon Product Enhancer",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "settings-manager.js"],
      "matches": [
        "https://www.amazon.com/*", 
        "https://www.amazon.cn/*", 
        "https://www.amazon.co.uk/*", 
        "https://www.amazon.de/*", 
        "https://www.amazon.fr/*", 
        "https://www.amazon.it/*", 
        "https://www.amazon.es/*", 
        "https://www.amazon.ca/*", 
        "https://www.amazon.com.au/*", 
        "https://www.amazon.co.jp/*",
        "https://www.amazon.in/*",
        "https://www.amazon.com.mx/*",
        "https://www.amazon.com.br/*"
      ]
    }
  ]
}